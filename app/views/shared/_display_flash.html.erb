<div id="flash">
  <% if flash[:warning] %>
    <p class="flash-warning"><%= flash[:warning] %></p>
  <% end %>
  <% if flash[:alert] %>
    <p class="flash-warning"><%= flash[:alert] %></p>
  <% end %>
  <% if flash[:notice] %>
    <p class="flash-notice"><%= flash[:notice] %></p>
  <% end %>
</div>
