<div class="attendance user-details">
  <h1>ADMIN</h1>
  <h2>Attendance Data</h2>
  <%= form_tag attendance_path, method: :get do %>
    <!-- todo: add the course id filter-->

    <%= label_tag :start_date, "Start Date:" %>
    <%= date_field_tag :start_date, params[:start_date], class: "date-input" %>
   
    <%= label_tag :end_date, "End Date:" %>
    <%= date_field_tag :end_date, params[:end_date], class: "date-input" %>
  <% end %>
  <div class="user-details">
    <!-- Add the button to download the CSV -->
    <%= button_to "Download Student Attendance CSV", download_student_attendance_test_path(format: :csv, course_id: params[:course_id], start_date: params[:start_date], end_date: params[:end_date]), method: :get, class: "download-btn" %>
    <%= button_to "Download TA Attendance CSV", download_ta_attendance_test_path(format: :csv, course_id: params[:course_id], start_date: params[:start_date], end_date: params[:end_date]), method: :get, class: "download-btn" %>
  </div>
</div>